<h1 id="title" class="center-align grey-text text-darken-2 flow-text">
  <span id="los-angeles" class = "flow-text">L</span>os
  <span id="los-angeles" class = "flow-text">A</span>ngeles Reserve</h1>


<section class="slider z-depth-3">
  <ul class="slides">
    <li>
      <img class="responsive-img" src="/img/city.jpeg">
      <!-- random image -->
    </li>
    <li>
      <img class="responsive-img" src="/img/restaurant.jpeg">
      <!-- random image -->
    </li>

  </ul>
  </div>
</section>

<section id="location-section">
  <div id="location-form" class="card-panel blue-grey lighten-4 z-depth-4">

    <form>
      <div class="input-field col s12">
        <div class="location-box">
          <label for="location"></label>
          <select class="form-control" id="location">
            <option value="disabled" disabled selected> Choose a location</option>
            <option class="others" value="downtown_la">Downtown LA</option>
            <option value="beverly_hills">Beverly Hills</option>
            <option value="hollywood">Hollywood</option>
            <option value="koreatown">Koreatown</option>
            <option value="Santa Monica">Santa Monica</option>
          </select>
        </div>

        <div class="input-field col s12">
          <div class="type-box">
            <label id="type-label" for="type"></label>
            <select class="form-control" id="type">
              <option value="" disabled selected> Pick an activity</option>
              <option value="1">Hotels</option>
              <option value="2">Restaurants</option>
              <option value="3">Attractions</option>
            </select>
          </div>

          <div class="input-field col s12">
            <div class="price-box">
              <label for="price"></label>
              </br>
              <select class="form-control" id="price">
                <option value="" disabled selected>Select a price range</option>
                <option value="1">$</option>
                <option value="2">$$</option>
                <option value="3">$$$</option>
              </select>
            </div>

            <button class="btn waves-effect waves-light btn-large blue darken-4" type="submit" name="action" id="reservebtn"> Reserve
              <i class="material-icons right">send</i>
            </button>

    </form>
    </div>
</section>




<!-- Popular Locations -->
<section id="popular" class="section section-popular scrollspy">
  <h2 id="popular-locations" class = "flow-text"> Popular Locations </h2>
  <div class="container">
    <div class="row">
      <div class="col s12 m4">
        <div class="card z-depth-4">
          <div class="card-image">
            <img src="/img/downtown_la.jpeg" alt="Downtown Los Angeles">
          </div>
          <div class="card-content">
            Downtown
          </div>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="card z-depth-4">
          <div class="card-image">
            <img src="/img/hollywood.jpeg" alt="Hollywood">
          </div>
          <div class="card-content">
            Hollywood
          </div>
        </div>
      </div>

      <div class="col s12 m4">
        <div class="card z-depth-4">
          <div class="card-image santa-monica">
            <img src="/img/santa_monica.jpeg" alt="Santa Monica" class="santa-monica-img">
          </div>
          <div class=" card-content ">
            Santa Monica
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

<footer class="section grey darken-1 white-text center ">
  <p class="flow-text ">Los Angeles Reserve &copy; 2018</p>
</footer>

